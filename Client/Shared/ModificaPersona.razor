@page "/modificapersona/{Id:int}"
@using DemoBlazorApp.Shared
@using DemoBlazorApp.Shared.Models.Entities
@inject HttpClient Http
@inject NavigationManager NavigationManager

<h1>Modifica persona</h1>

<p>&nbsp;</p>
<EditForm Model="persona" persona="@persona" OnValidSubmit="Modify">
    <DataAnnotationsValidator />
    <ValidationSummary />

    <div class="row">
        <div class="col-md-8">
            <div class="form-group">
                <label id="Cognome" class="control-label">Cognome</label>
                <InputText id="Cognome" @bind-Value="persona.Cognome"></InputText>
                @*<ValidationMessage For="@(() => persona.Cognome)" />*@
            </div>

            <div class="form-group">
                <label id="Nome" class="control-label">Nome</label>
                <InputText id="Nome" @bind-Value="persona.Nome"></InputText>
                @*<ValidationMessage For="@(() => persona.Nome)" />*@
            </div>

            <div class="form-group">
                <label id="Email" class="control-label">Indirizzo Email</label>
                <InputText id="Email" @bind-Value="persona.Email"></InputText>
                @*<ValidationMessage For="@(() => persona.Email)" />*@
            </div>

            <div class="form-group">
                <label id="Telefono" class="control-label">Telefono</label>
                <InputText id="Telefono" @bind-Value="persona.Telefono"></InputText>
                @*<ValidationMessage For="@(() => persona.Telefono)" />*@
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 text-right">
            <button type="submit" class="btn btn-success">Modifica</button>
            <button type="button" @onclick="@Cancel" class="btn btn-secondary">Annulla</button>
        </div>
    </div>
</EditForm>

@code {

    [Parameter] public int Id { get; set; }

    Persona persona = new Persona();

    protected async override Task OnParametersSetAsync()
    {
        persona = await Http.GetFromJsonAsync<Persona>($"api/persone/{Id}");
    }

    private async Task Modify()
    {
        await Http.PutAsJsonAsync($"api/persone/{persona.PersonaId}", persona);
        NavigationManager.NavigateTo("/fetchpersone");
    }

    public void Cancel()
    {
        NavigationManager.NavigateTo("/fetchpersone");
    }
}